{
    "name": "mineagents",
    "displayName": "MineAgents - Minecraft Addon Creator",
    "description": "AI-powered Minecraft Bedrock Edition addon creation assistant using local/cloud LLMs",
    "version": "0.1.0",
    "publisher": "mineagents",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/t2k2pp/mineagents.git"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "AI",
        "Other"
    ],
    "keywords": [
        "minecraft",
        "bedrock",
        "addon",
        "resource pack",
        "behavior pack",
        "ai",
        "llm"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "panel": [
                {
                    "id": "mineagents",
                    "title": "MineAgents",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "mineagents": [
                {
                    "type": "webview",
                    "id": "mineagents.chatView",
                    "name": "Chat",
                    "contextualTitle": "MineAgents"
                }
            ]
        },
        "commands": [
            {
                "command": "mineagents.newChat",
                "title": "New Chat",
                "icon": "$(add)",
                "category": "MineAgents"
            },
            {
                "command": "mineagents.cancelTask",
                "title": "Cancel Current Task",
                "icon": "$(debug-stop)",
                "category": "MineAgents"
            },
            {
                "command": "mineagents.openSettings",
                "title": "Open Settings",
                "icon": "$(gear)",
                "category": "MineAgents"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "mineagents.newChat",
                    "when": "view == mineagents.chatView",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "MineAgents",
            "properties": {
                "mineagents.provider.backendType": {
                    "type": "string",
                    "enum": [
                        "ollama",
                        "lmstudio",
                        "openai",
                        "gemini",
                        "generic"
                    ],
                    "default": "ollama",
                    "description": "Type of LLM backend server"
                },
                "mineagents.provider.baseUrl": {
                    "type": "string",
                    "default": "http://localhost:11434",
                    "description": "Base URL of the LLM server"
                },
                "mineagents.provider.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key (for cloud providers)"
                },
                "mineagents.provider.modelId": {
                    "type": "string",
                    "default": "",
                    "description": "Model identifier to use"
                },
                "mineagents.agent.maxIterations": {
                    "type": "number",
                    "default": 25,
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Maximum agent loop iterations per task"
                },
                "mineagents.agent.temperature": {
                    "type": "number",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 2,
                    "description": "LLM temperature for responses"
                },
                "mineagents.agent.interactionMode": {
                    "type": "string",
                    "enum": [
                        "guide",
                        "free",
                        "template"
                    ],
                    "default": "guide",
                    "description": "Interaction mode: guide (step-by-step), free (natural language), template (from templates)"
                },
                "mineagents.stableDiffusion.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable Stable Diffusion texture generation"
                },
                "mineagents.stableDiffusion.baseUrl": {
                    "type": "string",
                    "default": "http://localhost:8188",
                    "description": "ComfyUI server URL for texture generation"
                },
                "mineagents.approval.autoApproveWrites": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically approve file write operations"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "npm run build:extension && npm run build:webview",
        "build:extension": "node esbuild.mjs --production",
        "build:webview": "cd webview-ui && npm run build",
        "dev": "concurrently \"npm run dev:extension\" \"npm run dev:webview\"",
        "dev:extension": "node esbuild.mjs --watch",
        "dev:webview": "cd webview-ui && npm run dev",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src/ --ext .ts,.tsx",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/vsce": "^3.0.0",
        "concurrently": "^8.2.0",
        "esbuild": "^0.20.0",
        "eslint": "^8.56.0",
        "prettier": "^3.2.0",
        "typescript": "^5.3.0",
        "vitest": "^1.2.0"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "archiver": "^7.0.0",
        "gpt-tokenizer": "^2.1.0",
        "ignore": "^5.3.0",
        "sharp": "^0.33.0"
    }
}